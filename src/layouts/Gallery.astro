---
import Nav from '@components/Nav.astro';
import Footer from '@components/Footer.astro';
import '@styles/navbar.scss';
import '@styles/header.scss';
import '@styles/card-service.scss';
import '@styles/footer.scss';
import bootstrap from "bootstrap/dist/js/bootstrap.bundle.min.js?url";
import BackButton from '@components/BackButton.astro';
import "bootstrap/dist/css/bootstrap.min.css";
export interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{ title }</title>
		<meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Roboto:ital,wght@0,500;0,700;1,500&display=swap" rel="stylesheet">
  </head>
	<body>
    <Nav portfolio={true} />
		<slot />
    <Footer />
    <BackButton />
    <div id="expandImg">
      <div class="img-container">
        <svg width="46" id="close-image" height="46" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M19 6.41 17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41Z"></path>
        </svg>
        <img src="">
      </div>
    </div>
    <script is:inline>
      const expandImages = document.querySelector('div[expand-images=""]');
      const expandContainer = document.getElementById("expandImg");
      expandImages?.addEventListener("click", (event) => {
        console.log(event.target);
        if(event.target.getAttribute('expand-img') !== null){
          expandContainer.style.display = "flex";
          expandContainer.querySelector('img').setAttribute('src', event.target.querySelector('img').src);
        }
      });
      document.getElementById('close-image').addEventListener('click', () => expandContainer.style.display = "none");
    </script>
    <script src={bootstrap}></script>
	</body>
</html>